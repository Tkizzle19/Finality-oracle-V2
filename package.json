{
  "name": "finality-oracle",
  "version": "1.0.0",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/simple-deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy-finality-verifier.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy-finality-verifier.ts --network ethereum",
    "verify": "hardhat run scripts/deploy.ts",
    "lint": "solhint 'contracts/**/*.sol'",
    "typecheck": "tsc --noEmit",
    "test-contract": "hardhat run scripts/test-contract.ts --network localhost"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.8.0",
    "hardhat": "^2.26.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}
